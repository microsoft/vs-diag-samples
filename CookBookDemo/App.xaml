<Application
    x:Class="Cookbook.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:viewmodels="using:Cookbook.ViewModels"
    xmlns:conv="using:Cookbook.Converters"
    xmlns:local="using:Cookbook" RequestedTheme="Light">
    
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Resources.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <!--<viewmodels:CategoriesViewModel x:Key="categoriesViewModel"/>-->
            <conv:TimeToStringConverter x:Name="TimeToStringConverter"/>
            <conv:ImageToBooleanConverter x:Name="ImageToBooleanConverter"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
